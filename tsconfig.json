{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*","vite.config.ts"  // Adjust this to match your project structure
  ],
  "exclude": [
    "node_modules", "dist"  // Ensure these directories are excluded if needed
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
